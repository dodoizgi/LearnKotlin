<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/top_bar_bg"
        android:elevation="5dp"
        android:gravity="bottom"
        android:paddingBottom="5dp">

        <ImageButton
            android:id="@+id/account_top_bar_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="false"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:scaleType="centerInside"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_arrow_back"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/account_top_bar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="56dp"
            android:layout_marginEnd="56dp"
            android:layout_toEndOf="@+id/account_top_bar_back"
            android:textAlignment="center"
            android:textColor="@color/dark_blue"
            android:text="@string/kuraldisi_text"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/features_line_bottom"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="false"
            android:scaleType="centerInside"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_side_line"
            app:tint="@color/white" />

    </RelativeLayout>
</merge>